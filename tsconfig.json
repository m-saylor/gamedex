{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "checkJs": true,
    /* Bundled projects */
    "lib": [
      "dom",
      "dom.iterable",
      "ES2022"
    ],
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "incremental": true,
    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    ".eslintrc.cjs",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.js",
    ".next/types/**/*.ts",
    "src/components/jump-to-top.jsx",
    "src/components/require-auth.jsx",
    "src/index.jsx",
    "src/components/app.jsx",
    "src/components/auth-toaster.jsx",
    "src/components/footer.jsx",
    "src/components/user-profile/header/social-icon-buttons.jsx",
    "src/components/user-profile/header/user-profile-header.jsx",
    "src/components/user-profile/settings/social-links/social-links.jsx",
    "src/components/user-profile/settings/user-info/editable-buttons.jsx",
    "src/components/user-profile/settings/user-info/editable-user-input.jsx",
    "src/components/user-profile/settings/user-info/update-profile-photo.jsx",
    "src/components/user-profile/settings/user-info/user-info-input.jsx",
    "src/components/user-profile/settings/user-info/user-info-textarea.jsx",
    "src/components/user-profile/settings/user-info/user-info.jsx",
    "src/components/user-profile/settings/settings.jsx",
    "src/components/user-profile/user-games/edit-saved-game-buttons.jsx",
    "src/components/user-profile/user-games/user-game.jsx",
    "src/components/user-profile/user-games/user-games.jsx",
    "src/components/browse-games/trending/trending.tsx",
    "src/components/browse-games/browse-games.tsx",
    "src/components/game/game-card-buttons.jsx",
    "src/components/game/game-card.tsx",
    "src/components/game/game-list-button.jsx",
    "src/components/nav-bar/nav-bar.jsx",
    "src/components/nav-bar/nav-profile-menu.jsx",
    "src/components/nav-bar/search-bar.jsx",
    "src/components/search-results/results-list.jsx",
    "src/components/search-results/results.jsx",
    "src/components/auth-modal/auth-modal-buttons.jsx",
    "src/components/auth-modal/auth-modal-inputs.jsx",
    "src/components/auth-modal/auth-modal.jsx",
    "src/components/auth-modal/password-input.jsx",
    "src/components/browse-games/top-rated/top-rated-list.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}